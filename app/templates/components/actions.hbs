  </div>
</div>
<script>

  function crediter() {

    let credit = document.getElementById("credit").value;
    if (credit) {

      personne.solde += parseFloat(credit);


      console.log(personne.solde);

      var settingsPersonne = {
        "url": "http://localhost:3000/personnes",
        "method": "POST",
        "timeout": 0,
        "headers": {
          "Content-Type": "application/json"
        },
        "data": JSON.stringify(personne),
      };


      $.ajax(settingsPersonne).done(function (response) {
        setPersonne();
        setStocks();
        setPortofolio();
      });
    } else {
      alert("Veuillez saisir une valeur");
    }

  }

  function debiter() {

    let debit = document.getElementById("debit").value;
    if (debit) {

      personne.solde -= parseFloat(debit);


      console.log(personne.solde);

      var settingsPersonne = {
        "url": "http://localhost:3000/personnes",
        "method": "POST",
        "timeout": 0,
        "headers": {
          "Content-Type": "application/json"
        },
        "data": JSON.stringify(personne),
      };


      $.ajax(settingsPersonne).done(function (response) {
        setPersonne();
        setStocks();
        setPortofolio();
      });
    } else {
      alert("Veuillez saisir une valeur");
    }
  }


