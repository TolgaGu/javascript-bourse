<div style="left: 300px; width:70%; position: absolute">
  <h1>Portefeuille</h1>
  <label>Se créditer<input type="number" id="credit"></label>
  <button onclick="crediter()">Créditer</button>
  <label>Se Débiter<input type="number" id="debit"></label>
  <button onclick="debiter()">Débiter</button>
  <br><br><br><br>
  <h1>My actions</h1>
  <br>
  <table id="my-actions-datatable" class="display"></table>
